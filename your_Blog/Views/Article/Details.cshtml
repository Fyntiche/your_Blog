@model your_Blog.Models.ArticleModel

@{
    ViewBag.Title = "Details";
}

<div class="container zerogrid">

    <div class="col-8" id="post-container">
        <div class="wrap-col">

            <div class="post">
                <div class="post-margin">
                    <h4>@Html.DisplayFor(model => model.Name)</h4>
                    <ul class="post-status">
                        <li><i class="fa fa-clock-o"></i>@Html.DisplayFor(model => model.Date)</li>
                        <li><i class="fa fa-folder-open-o"></i>@Html.DisplayFor(model => model.Category.Name)</li>
                    </ul>
                    <div class="clear"></div>
                </div>

                <div class="featured-image">
                    @if (Model.HeroImage != null)
                    {
                        @Html.Raw("<img class=\"img-responsive\" src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.HeroImage) + "\" />")
                    }
                    <div class="post-icon">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <a href="@Url.Action("Edit", new { id=Model.Id}) ">
                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                            </a>
                        </span>
                    </div>
                </div>

                <div class="post-margin">
                    <p>@Html.DisplayFor(model => model.Description)</p>
                    <div class="post-tags">
                        <span class="fa-stack fa-lg">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-tags fa-stack-1x fa-inverse"></i>
                        </span>
                        @foreach (var c in Model.Tags)
                        {
                            @(c.Name + "; ");
                        }
                    </div>
                    &nbsp;
                    <ul class="post-social">
                        <li>
                            @Html.ActionLink("Вернуться к списку", "Index")
                        </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="post-status">
                            <li>
                                @Html.ActionLink("Удалить", "Delete", new { id = Model.Id, @class = "readmore" })
                            </li>
                        </ul>
                    }

                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>

